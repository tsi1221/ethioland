generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["mongodb"] // this is deprecated in newer Prisma versions
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  fullName        String
  email           String    @unique
  phone           String
  passwordHash    String
  role            Role      @default(BUYER)
  nationalId      String?
  kebeleId        String?
  profilePhotoUrl String?

  posts           post[]    @relation("UserToPost")
  comments        Comment[] @relation("UserToComment")
  Token           Token[]

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}



model post {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  title      String
  price      Int
  content    String
  img      String
  adress     String
  city       String
  bedroom    Int
  bathroom   Int
  latitude   String
  longitude  String
  type       Type
  property   Property
 
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  
  userId     String   @db.ObjectId
  user       User     @relation("UserToPost", fields: [userId], references: [id])
  Comment Comment[] @relation("PostToComment")
}

model Comment {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  content    String
  userId     String   @db.ObjectId
  postId     String   @db.ObjectId

  user       User     @relation("UserToComment", fields: [userId], references: [id])

  post       post     @relation("PostToComment", fields: [postId], references: [id])

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Token {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  token      String   @unique
  userId     String   @db.ObjectId
  user       User     @relation(fields: [userId], references: [id])
  expiresAt  DateTime
}

enum Role {
  ADMIN
  BUYER
  SELLER
  AGENT
}

enum Type {
  BUYER
  RENT
}

enum Property {
  apartment
  house
  condo
  land
}
enum City {
  AddisAbaba
  Adama
  BahirDar
  Mekelle
  DireDawa
  Hawassa
  Jimma
  Gondar
  Dessie
  Jijiga
}